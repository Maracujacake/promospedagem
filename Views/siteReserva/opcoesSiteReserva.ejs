<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opções de Site de Reserva</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto mt-12">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Bem-vindo</h1>

        <div class="flex justify-center space-x-4">
            <!-- Ver todas as promoções do siteReserva -->
            <a href="/siteReserva/promocoes" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
                Ver todas as promoções
            </a>

            <!-- Alterar informações do siteReserva -->
            <a href="/siteReserva/update" class="bg-yellow-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600">
                Alterar informações
            </a>

            <button id="logoutBtn" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-black"> Realizar Logout</button>

            <a href="/" class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-yellow-600">
                Voltar para a página inicial
            </a>

            <!-- Deletar o siteReserva -->
            <form action="/siteReserva/delete" method="POST" onsubmit="return confirm('Tem certeza que deseja deletar seu site de reserva?');">
                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">
                    Deletar siteReserva
                </button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const token = localStorage.getItem('token');
            console.log(token);

            if (!token || localStorage.getItem('userType') !== 'siteReserva') {
                alert('Você não está autenticado. Redirecionando para a página de login.');
                window.location.href = '/siteReserva/login'; // Redireciona para a página de login
                return;
            }
        });

        document.getElementById('logoutBtn').addEventListener('click', () => {
            // Remover o token do localStorage
            localStorage.removeItem('token');
            localStorage.removeItem('email');
            localStorage.removeItem('userType');
            
            console.log('Logout bem-sucedido!');
            
            // Redirecionar para a página de login
            window.location.href = '/siteReserva/login'; // Ajuste o caminho conforme necessário
        });
    </script>
</body>
</html>
